<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<title>Document</title>
	</head>
	<style>
		*{
			padding: 0;
			margin: 0;
			box-sizing: border-box;
		}
		body,html{
			width: 100%;
			height: 100%;
		}

		header{
			padding: 20px;
			width: 100%;
			background-color: rgba(182, 182, 182, 0.402);

			display: flex;
			align-items: center;
		}

		ul{
			list-style: none;
		}

		header ul{
			display: flex;
			gap:20px;
			padding-left: 20px;
		}

		body{
			display: flex;
			flex-direction: column;
			align-items: center;
		}
		.wrapper{
			display: flex;
			flex-direction: column;
			width: 90%;
			height: 100%;
		}
		main{
			flex:1;
			padding: 0 20px;
		}
		footer{
			padding: 20px;
		}
	</style>
	<body>
		<div class='wrapper'>
				{{>header}}
				weather
   <form id="redirectForm">
    <input type="text" id="urlInput" name="urlInput">
    <input type="submit" value="Перейти">
	</form>
				
		</div>
		<script>
document.getElementById('redirectForm').addEventListener('submit', function(event) {
    event.preventDefault(); // предотвращаем действие по умолчанию (отправку формы)
    
    // Получаем значение из поля ввода
    var url = document.getElementById('urlInput').value;
    
    // Перенаправляем пользователя на указанный URL
    window.location.href = 'weather?city='+url;
});
</script>
	</body>
	
</html>